<!-- Individual Drink Page (bobby workin on this) -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Beverage Builder</title>
    <!-- Styles -->
    <!--<link rel="stylesheet" href="/stylesheets/beverage_style.css"/>-->
    <link rel='stylesheet' href='/stylesheets/beverage_style.css' />
    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/abc50414ad.js" crossorigin="anonymous"></script>
    <!-- BootStrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>
<body>
    <!-- NAVBAR -->
    <div class="topNavBar">
        <div class="row">
          <!--Logo-->
          <div class="col-sm-4">
            <div id="logo-photo">
              <a href="./index.html" class="logoButton"><img src="images/beveragebuilder_logo1.png" alt="" style="float: left; transform: translateY(-40px); max-width: 100%; max-height: 100%;"></a>
            </div>
          </div>
          <!--Mid Section-->
          <div class="col-sm-4">
            <div class="midNav">
              <h4>Home</h4>
              <h4>Cocktails</h4>
              <h4>Ingredients</h4>
            </div>
          </div>
          <!--Profile-->
          <div class="col-sm-4">
            <div class="rightNav">
              <button class="profileButton"><i class="fa-regular fa-circle-user fa-3x"></i></button>
            </div>
          </div>
        </div>

        
        <!-- <a href="" class="logoButtonUnder"><img src="" alt="" width="46px" style="margin-left: 5px;"></a> -->
        
        
    </div>

    <div class="content">
      <div class="row" id="drink-header">
        <div class="col">
          <p id="drink-name"><%= beverage.name %></p>
          <p id="author">Mixologist: <%=beverage.author %></p>
        </div>
        <div class="col">
          <div id="stars">
            <i style="color: #e13859" class="fa-solid fa-star"></i>
          <i style="color: #e13859" class="fa-solid fa-star"></i>
          <i style="color: #e13859" class="fa-solid fa-star"></i>
          <i style="color: #e13859" class="fa-solid fa-star"></i>
          <i style="color: #e13859" class="fa-solid fa-star"></i>
          <div class="row">
            <h5>5.0 (1103)</h5>
          </div>
          </div>
        </div>
      </div>
      <div class="row" id="header-btn">
        <div class="col-sm-auto">
          <p id="btn"><i class="fa-solid fa-heart"></i> Like</p>
        </div>
        <div class="col-sm-auto">
          <p id="btn"><i class="fa-solid fa-share"></i> Share</p>
        </div>
        <div class="col-sm-auto">
          <!--<p id="btn"><i class="fa-sharp fa-solid fa-folder-open"></i> Save</p>-->
          <form method="POST" action=<%="/save-bev/"+ beverage.id %> >
            <button type="submit" class="btn btn-secondary"><i class="fa-sharp fa-solid fa-folder-open"></i>Save</button>
          </form>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div id="profile-photo">
            <p id="photo-title">DRINK PHOTO</p>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div id="desc">
            <h1>Description</h1>
          </div>
        </div>
      </div>
      <div class="row">
        <p id="desc-text"><%= beverage.description %></p>
      </div>
      <div class="row">
        <div class="col">
          <div id="desc">
            <h1>Instructions</h1>
          </div>
        </div>
      </div>
      <div class="row">
        <p id="desc-text"><%= beverage.instr %></p>
      </div>
      <div class="row">
        <div id="ingred-section">
          <h1>Ingredients</h1>
        </div>
      </div>
      <div class="row">
        <div id="ingred-photo">
        <ul>
          <% for (ingred of ingreds) { %>
          <li><p><%=ingred%></p></li>
          <% } %>
        </ul>
        </div>
      </div>

      <div class="row" id="comment-header">
          <div class="col-sm-4">
              <h1>Comments</h1>
          </div>
          <div class="col-sm-auto">
            <!-- Comment button -->
            <button type="button" style="margin-left: 20px; background-color: #5F7394; border: 0px" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
              <i class="fa-solid fa-plus"></i> New Comment
          </button>

      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
          <div class="modal-content">
              <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">New Comment</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <form method="POST" action=<%="/post-comment/"+ beverage.id %> >
                  <div class="modal-body">
                    <!-- Add a comment section -->
                    <label for="drinkDesc" class="form-label">Comment</label>
                    <textarea type="text" class="form-control" id="comText" name="comText" placeholder="Your comment" value="" required></textarea>
                    <input type="text" class="form-control" id="rating" name="rating" placeholder="rating 1 - 5" value="" required>
                    <!---->
                  </div>
                  <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  <button type="submit" style="background-color: #5F7394;" class="btn btn-primary">Post Comment</button>
                  </div>
              </form>
          </div>
          </div>
      </div>
      <!---->
          </div>
      </div>

      <div class="comment-section">
      <!--Comments-->
      <% for (comment of comments) { %>
      <div class="row" id="comment">
        <div class="col">
          <div>
            <h3><%= comment.username %></h3>
          </div>
        </div>
        <div class="col">
          <% for (let i = 0; i < comment.rating; i++) {%>
          <i style="color: #e13859" class="fa-solid fa-star"></i> <!--
          <i style="color: #e13859" class="fa-solid fa-star"></i>
          <i style="color: #e13859" class="fa-solid fa-star"></i>
          <i style="color: #e13859" class="fa-solid fa-star"></i>
          <i style="color: #e13859" class="fa-solid fa-star"></i> -->
          <% } %> 
          <!--Rating: <%= comment.rating %>-->

        </div>
        <div class="row">
          <p id="comment-text"><%= comment.text %></p>
        </div>
      </div>
      <% } %>
      <!---->
      </div>
    </div>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</body>
</html>