<%- include('header', {cssFile: "drinks_style.css" , currUser: currentUser.username}) -%>

    <section class="heroimage">
        <h1 class="title">GET YOUR SIP ON</h1>
    </section>

    <div id="searchbar" class="row">
        <div class="row">
            <div class="container" style="background-color: white; padding-bottom: 30px; padding-top: 30px;">

                <form method="post" action="/drinks">
                    <div class="row" style="text-align: center; justify-content: center;">
                        <div class="col-1">
                            <div class="dropdown" name="ingredientList">
                                <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown"
                                    aria-expanded="false" data-bs-auto-close="outside" style="width: 200px">
                                    Filter By: Ingredients
                                </button>
                                <div class="dropdown-menu p-4" method="post">
                                    <% for (ingredient of ingredients) { %>
                                        <% count += 1 %>
                                        <div class="mb-3">
                                            <div class="form-check">
                                                <!--<input type="checkbox" class="form-check-input" id="dropdownCheck2" name=<%="ingredient" + count %>-->
                                                <input type="checkbox" class="form-check-input" id="dropdownCheck2" name="ingredient" value="<%= ingredient.name %>">
                                                <label class="form-check-label" for="dropdownCheck2">
                                                    <%= ingredient.name %>
                                                </label>
                                            </div>
                                        </div>
                                        <% } %>

                                            <!--<button type="submit" class="btn btn-primary">Sign in</button>-->
                                </div>
                            </div>
                        </div>
                        <div class="col-1">
                            <button class="w-80 btn btn-primary btn-md" type="submit" style="width: 200px">Refresh</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
        <div>

        </div>

        <div id="drinkgrid" class="row" style="justify-content: center;">
            <div class="drinkgridcontainer">
                <div class="featuredCollection">
                    <% for (drink of drinks) { %>
                        <!-- item 1 -->
                        <a href="./beverage/<%= drink.id %>" class="featuredItem" style="text-decoration: none;">
                            <div class="card">
                                <img src="images/great-cocktails-9PyQwwmZxpI-unsplash.jpg" alt="Avatar"
                                    style="width:400px; height: auto; transform: translate3d(-1px,-1px,0)">
                                <div class="container">
                                    <h5 class="card-type">DRINK TYPE</h5>
                                    <p class="card-title"><b>
                                            <%= drink.name %>
                                        </b></p>

                                    <% for (let i=0; i < (Math.floor(drink.rating)); i++) {%>
                                        <i style="color: #e13859" class="fa-solid fa-star"></i>
                                        <% } %>
                                            <% if (((drink.rating * 10) % 10) !=0) { %>
                                                <i style="color: #e13859" class="fa-solid fa-star-half-stroke"></i>
                                                <% } %>
                                                    <% for (let i=0; i < (5 - (drink.rating + .99)); i++) { %>
                                                        <i style="color: #e13859" class="fa-regular fa-star"></i>
                                                        <% } %>

                                </div>
                            </div>
                        </a>
                        <% } %>

                </div>

            </div>


        </div>



