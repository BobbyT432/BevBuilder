<!-- Individual Drink Page (bobby workin on this) -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Beverage Builder</title>
    <!-- Styles -->
    <!--<link rel="stylesheet" href="/stylesheets/beverage_style.css"/>-->
    <link rel='stylesheet' href='/stylesheets/beverage_style.css' />
    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/abc50414ad.js" crossorigin="anonymous"></script>
    <!-- BootStrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>
<body>
    <!-- NAVBAR -->
    <div class="topNavBar">
        <div class="row">
          <!--Logo-->
          <div class="col-sm-4">
            <div id="logo-photo">
              <!-- <a href="./index.html" class="logoButton"><img src="images/beveragebuilder_logo1.png" alt="" style="float: left; transform: translateY(-40px); max-width: 100%; max-height: 100%;"></a> -->
            </div>
          </div>
          <!--Mid Section-->
          <div class="col-sm-4">
            <div class="midNav">
              <h4>Home</h4>
              <h4>Cocktails</h4>
              <h4>Ingredients</h4>
            </div>
          </div>
          <!--Profile-->
          <div class="col-sm-4">
            <div class="rightNav">
              <button class="profileButton"><i class="fa-regular fa-circle-user fa-3x"></i></button>
            </div>
          </div>
        </div>
        <!-- <a href="" class="logoButtonUnder"><img src="" alt="" width="46px" style="margin-left: 5px;"></a> -->
    </div>

    <div class="content">
      <div class="container">
        <main>
          <div class="py-5 text-center">
            <h2>Craft Your Drink</h2>
            <p class="lead">Create your drink below to share with the world!</p>
          </div>
      
          <div class="row g-5">
            <div class="col-md-5 col-lg-4 order-md-last">
              <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-primary">Ingredients</span>
                <span class="badge bg-primary rounded-pill">1</span>
              </h4>
              <ul class="list-group mb-3">
                <ul id="ing-list">
                <!-- Ingredients -->
                <li class="list-group-item d-flex justify-content-between lh-sm">
                  <div>
                    <h6 class="my-0">Ingredient</h6>
                    <small class="text-muted">Optional / Required</small>
                  </div>
                  <span class="text-muted">Amount</span>
                </li>
                <!---->
              </ul>
          
                <!-- <li class="list-group-item d-flex justify-content-between">
                  <span>Total (USD)</span>
                  <strong>$20</strong>
                </li> -->
              </ul>
      
                <div class="input-group">
                  <input type="text" class="form-control" placeholder="Ingredient name">
                  <button type="submit" onclick="addelement();" class="btn btn-secondary">Add</button>
                </div>

            </div>
            <div class="col-md-7 col-lg-8">
              <h4 class="mb-3">Drink Information</h4>
              <form class="needs-validation" novalidate action="/create" method="post">
                <div class="row g-3">

                  <div class="col-sm-6">
                    <label for="drinkName" class="form-label">Drink name</label>
                    <input type="text" class="form-control" id="drinkName" name="drinkName" placeholder="" value="" required>
                    <div class="invalid-feedback">
                      Valid name is required.
                    </div>
                  </div>
      
                  <div class="col-sm-6">
                    <label for="username" class="form-label">Username</label>
                    <div class="input-group has-validation">
                      <span class="input-group-text">@</span>
                      <input type="text" class="form-control" id="username" name="username"placeholder="<%= username %>" readonly>
                    <div class="invalid-feedback">
                        Your username is required.
                      </div>
                    </div>
                  </div>
                  
                  <div class="col-sm-12">
                    <label for="drinkDesc" class="form-label">Drink Description</label>
                    <textarea type="text" class="form-control" id="drinkDesc" name="drinkDesc" placeholder="" value="" required></textarea>
                     <div class="invalid-feedback">
                      Valid description is required.
                    </div>
                  </div>

                <hr class="my-4">
      
                <button class="w-100 btn btn-primary btn-lg" type="submit">Craft</button>
              </form>
            </div>
          </div>
        </main>
      
        <footer class="my-5 pt-5 text-muted text-center text-small">
          <p class="mb-1">&copy; 2023 Beverage Builder</p>
          <ul class="list-inline">
            <li class="list-inline-item"><a href="#">Privacy</a></li>
            <li class="list-inline-item"><a href="#">Terms</a></li>
            <li class="list-inline-item"><a href="#">Support</a></li>
          </ul>
        </footer>
      </div>
      
    </div>

      <script src="/javascripts/form-validation.js"></script> <!-- Checkout bootstrap example used -->
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</body>
</html>