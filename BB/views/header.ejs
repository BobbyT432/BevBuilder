          </div>
          <!--Mid Section-->
          <div class="col-8">
            <div class="midNav">
                <a href="/home" class="navBarText"><h4 class="navText">Home</h4></a>
                <a href="/create" class="navBarText"><h4 class="navText">Create</h4></a>
